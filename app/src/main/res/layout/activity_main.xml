<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="end">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DCDCDC">


        <ImageView
            android:id="@+id/menu"
            android:layout_width="72px"
            android:layout_height="72px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45px"
            android:layout_marginRight="72px"
            android:src="@drawable/menu"></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="93px"
            android:layout_alignBottom="@id/menu"
            android:layout_marginLeft="48px"
            android:gravity="center_vertical"
            android:text="Best Quotes  Status"
            android:textColor="#4D4D4D"
            android:textSize="20sp"
            android:textStyle="bold"></TextView>


        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="120px"
            android:layout_below="@id/menu"
            android:layout_marginLeft="48px"
            android:layout_marginTop="50px"
            android:layout_marginRight="48px"
            android:background="@drawable/search_bg">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="72px"
                android:visibility="gone"
                android:layout_height="72px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="48px"
                android:src="@drawable/delete"></ImageView>

            <ImageView
                android:id="@+id/search"
                android:layout_width="72px"
                android:layout_height="72px"
                android:layout_centerVertical="true"
                android:layout_marginLeft="48px"
                android:src="@drawable/search"></ImageView>


            <EditText
                android:id="@+id/input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="24px"
                android:layout_marginRight="24px"
                android:layout_toLeftOf="@id/delete"
                android:layout_toRightOf="@id/search"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="Search ..."
                android:textColor="#4D4D4D"
                android:textColorHint="#BCD0DC"
                android:textSize="17sp"></EditText>

        </RelativeLayout>


        <GridView
            android:id="@+id/gridView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/search_layout"
            android:layout_marginLeft="48px"
            android:layout_marginTop="48px"
            android:layout_marginRight="48px"
            android:layout_marginBottom="10px"
            android:horizontalSpacing="48px"
            android:numColumns="2"
            android:scrollbars="none"
            android:verticalSpacing="28px"></GridView>

    </RelativeLayout>


    <!-- 右边菜单 -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        app:headerLayout="@layout/head_layout"
        app:menu="@menu/menu_drawer" />

</androidx.drawerlayout.widget.DrawerLayout>